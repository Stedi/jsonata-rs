{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:monorepos",
    "group:recommended"
  ],
  "automerge": true,
  "platformAutomerge": true,
  "rebaseWhen": "conflicted",
  "minimumReleaseAge": "21 days",
  "internalChecksFilter": "strict",
  "dependencyDashboard": true,
  "forkProcessing": "enabled",
  "major": {
    "automerge": false,
    "dependencyDashboardApproval": true,
    "addLabels": [
      "major-upgrade"
    ]
  },
  "replacement": {
    "automerge": false,
    "addLabels": [
      "replacement"
    ]
  },
  "vulnerabilityAlerts": {
    "addLabels": [
      "security"
    ]
  },
  "packageRules": [
    {
      "groupName": "high-confidence-rust-minor",
      "matchManagers": [
        "cargo"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "addLabels": [
        "dependencies"
      ],
      "schedule": [
        "after 9am and before 5pm on Monday"
      ]
    },
    {
      "groupName": "high-confidence-rust-patch",
      "matchManagers": [
        "cargo"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "addLabels": [
        "dependencies"
      ],
      "schedule": [
        "after 9am and before 5pm on Monday"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days",
      "schedule": [
        "after 9am and before 5pm on Monday"
      ],
      "groupName": "GitHub Actions upgrade (major)",
      "addLabels": [
        "dependencies"
      ],
      "matchSourceUrls": [
        "https://github.com/actions{/,}**"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "pinDigest",
        "rollback",
        "bump"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days",
      "schedule": [
        "after 9am and before 5pm on Monday"
      ],
      "groupName": "GitHub Actions upgrade",
      "addLabels": [
        "dependencies"
      ]
    }
  ]
}
